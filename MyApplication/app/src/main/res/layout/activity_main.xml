<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<TableLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/input"
        android:textSize="60sp"
        android:textAlignment="center"
         />
    <TextView
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/result"
        android:textSize="60sp"
        android:textAlignment="center"
        />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/one"
            android:text="1"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/two"
            android:text="2"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/three"
            android:text="3"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/plus"
            android:text="+"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/four"
            android:text="4"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/five"
            android:text="5"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/six"
            android:text="6"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/minus"
            android:text="-"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/seven"
            android:text="7"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/eight"
            android:text="8"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/nine"
            android:text="9"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/star"
            android:text="*"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/clear"
            android:text="C"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/zero"
            android:text="0"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/equal"
            android:text="="
            android:layout_weight="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/slash"
            android:text="/"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>



</TableLayout>
</RelativeLayout>